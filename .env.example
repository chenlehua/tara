# ============================================
# TARA System Environment Configuration
# ============================================

# ===== 通用配置 =====
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=your-secret-key-change-in-production
APP_LOG_LEVEL=INFO

# ===== 服务端口 =====
PROJECT_SERVICE_PORT=8001
DOCUMENT_SERVICE_PORT=8002
ASSET_SERVICE_PORT=8003
THREAT_RISK_SERVICE_PORT=8004
DIAGRAM_SERVICE_PORT=8005
REPORT_SERVICE_PORT=8006
AGENT_SERVICE_PORT=8007

# ===== MySQL 配置 =====
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=tara
MYSQL_PASSWORD=tara_password
MYSQL_DATABASE=tara_db
MYSQL_ROOT_PASSWORD=root_password

# ===== Redis 配置 =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===== Neo4j 配置 =====
NEO4J_HOST=localhost
NEO4J_BOLT_PORT=7687
NEO4J_HTTP_PORT=7474
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_password

# ===== Milvus 配置 =====
# 本地开发使用 localhost，Docker 环境使用服务名 milvus
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_USER=
MILVUS_PASSWORD=

# ===== ElasticSearch 配置 =====
ES_HOST=localhost
ES_PORT=9200
ES_USER=elastic
ES_PASSWORD=elastic_password

# ===== MinIO 配置 =====
MINIO_HOST=localhost
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ACCESS_KEY=minio_access_key
MINIO_SECRET_KEY=minio_secret_key
MINIO_BUCKET_DOCUMENTS=documents
MINIO_BUCKET_REPORTS=reports
MINIO_BUCKET_DIAGRAMS=diagrams

# ===== vLLM 模型服务配置 =====
VLLM_QWEN3_VL_HOST=localhost
VLLM_QWEN3_VL_PORT=8100
VLLM_QWEN3_HOST=localhost
VLLM_QWEN3_PORT=8101
VLLM_OCRFLUX_HOST=localhost
VLLM_OCRFLUX_PORT=8102
VLLM_EMBEDDING_HOST=localhost
VLLM_EMBEDDING_PORT=8103

# ===== 模型配置 =====
QWEN3_VL_MODEL_PATH=/models/Qwen3-VL-8B
QWEN3_MODEL_PATH=/models/Qwen3-8B
OCRFLUX_MODEL_PATH=/models/OCRFlux
EMBEDDING_MODEL_PATH=/models/Qwen3-Embedding-0.6B

# ===== Celery 配置 =====
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ===== JWT 配置 =====
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ===== CORS 配置 =====
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
CORS_ALLOW_CREDENTIALS=true

# ===== 文件上传配置 =====
MAX_UPLOAD_SIZE_MB=100
ALLOWED_EXTENSIONS=pdf,doc,docx,xls,xlsx,ppt,pptx,txt,dbc,json

# ===== 日志配置 =====
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/tara/
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30
